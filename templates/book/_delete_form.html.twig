<form method="post" action="{{ path('book_delete', {'id': book.id}) }}"
      onsubmit="return confirm('Vous êtes sûre de voulir supprimmer ce livre?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn btn-primary">Supprimer le livre</button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block main %}
    <div class="container">
        <h1>Book index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>CoverImageName</th>
                    <th>Description</th>
                    <th>Author</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.id }}</td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.coverImageName }}</td>
                        <td>{{ book.description }}</td>
                        <td>{{ book.author }}</td>
                        <td>
                            <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                            <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('book_new') }}">Create new</a>
    </div>
{% endblock %}

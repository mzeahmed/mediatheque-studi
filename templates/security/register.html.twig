{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous à la médiatheque{% endblock %}

{% block seo %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block body_id 'register' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 m-auto">
                {{ form_start(form) }}
                <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            {% if form_errors(form.firstname) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.firstname) }}
                                </div>
                            {% endif %}
                            {{ form_widget(form.firstname) }}
                        </div>
                        <div class="col-md-6">
                            {% if form_errors(form.lastname) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form.lastname) }}
                                </div>
                            {% endif %}
                            {{ form_widget(form.lastname) }}
                        </div>
                    </div>

                    {% if form_errors(form.email) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form.email) }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.email) }}

                    {% if form_errors(form.isBornAt) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form.isBornAt) }}
                        </div>
                    {% endif %}
                    {{ form_label(form.isBornAt) }}
                    {{ form_widget(form.isBornAt) }}

                    {% if form_errors(form.password) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form.password) }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.password) }}

                    <div class="mt-3 mb-3">
                        <button class="btn btn-lg btn-primary mediatheque-btn" type="submit" id="register_submit_btn">
                            S'inscrire
                        </button>
                    </div>

                    <div class="mediatheque-form-footer">
                        <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez vous</a></p>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
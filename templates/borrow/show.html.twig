{% extends 'base.html.twig' %}

{% block title %}Borrow{% endblock %}

{% block body %}
    <h1>Borrow</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrow.id }}</td>
            </tr>
            <tr>
                <th>IsBorrowed</th>
                <td>{{ borrow.isBorrowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsBorrowedAt</th>
                <td>{{ borrow.isBorrowedAt ? borrow.isBorrowedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsReturnedAt</th>
                <td>{{ borrow.isReturnedAt ? borrow.isReturnedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('borrow_index') }}">back to list</a>

    <a href="{{ path('borrow_edit', {'id': borrow.id}) }}">edit</a>

    {{ include('borrow/_delete_form.html.twig') }}
{% endblock %}
